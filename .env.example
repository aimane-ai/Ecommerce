# =======================
# APPLICATION CONFIG
# =======================
APP_NAME=VotreApp
APP_ENV=production                    # ✅ Production
APP_KEY=base64:YourGeneratedKeyHere   # ✅ Clé générée
APP_DEBUG=false                       # ✅ Debug désactivé
APP_URL=https://votre-domaine.com     # ✅ Vrai domaine

# =======================
# DATABASE (MySQL/PostgreSQL)
# =======================
DB_CONNECTION=mysql                   # ✅ Base de données robuste
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_secure_password      # ✅ Mot de passe fort

# =======================
# SESSION & CACHE
# =======================
SESSION_DRIVER=file                   # ✅ Ou "redis" en production
SESSION_ENCRYPT=true                  # ✅ Sessions chiffrées
SESSION_LIFETIME=120

CACHE_STORE=file                      # ✅ Ou "redis"/"memcached"

# =======================
# MAIL (Configuration Réelle)
# =======================
MAIL_MAILER=smtp                      # ✅ Service réel
MAIL_HOST=mail.votre-domaine.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@votre-domaine.com
MAIL_FROM_NAME="${APP_NAME}"

# =======================
# SERVICES EXTERNES
# =======================
GOOGLE_API_KEY=your_restricted_key_here  # ✅ Nouvelle clé restreinte
# STRIPE_KEY=pk_live_...
# STRIPE_SECRET=sk_live_...

# =======================
# SECURITY
# =======================
LOG_CHANNEL=stack
LOG_LEVEL=warning                     # ✅ Pas "debug" en production